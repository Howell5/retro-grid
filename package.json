{
  "name": "@howell5/retro-grid",
  "type": "module",
  "author": {
    "name": "howell5",
    "email": "howell5@outlook.com",
    "url": "https://github.com/howell5"
  },
  "version": "1.2.0",
  "main": "./dist/retro-grid.umd.js",
  "module": "./dist/retro-grid.es.js",
  "types": "./dist/types/index.d.ts",
  "files": [
    "dist"
  ],
  "license": "MIT",
  "keywords": [
    "vue",
    "vue3",
    "grid",
    "background",
    "retro",
    "component"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/howell5/retro-grid"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/retro-grid.umd.js",
      "import": "./dist/retro-grid.es.js"
    },
    "./style.css": "./dist/retro-grid.css"
  },
  "scripts": {
    "dev": "vite",
    "build": "run-p type-check \"build-only {@}\" --",
    "build:demo": "vite build --config vite.demo.config.ts",
    "preview": "vite preview",
    "release": "release-it",
    "build-only": "vite build",
    "type-check": "vue-tsc --build",
    "lint:oxlint": "oxlint . --fix -D correctness --ignore-path .gitignore",
    "lint:eslint": "eslint . --fix",
    "lint": "run-s lint:*",
    "format": "prettier --write src/"
  },
  "dependencies": {
    "vue": "^3.5.13"
  },
  "devDependencies": {
    "@release-it/conventional-changelog": "^9.0.3",
    "@tsconfig/node22": "^22.0.0",
    "@types/node": "^22.10.2",
    "@vitejs/plugin-vue": "^5.2.1",
    "@vue/eslint-config-prettier": "^10.1.0",
    "@vue/eslint-config-typescript": "^14.1.3",
    "@vue/tsconfig": "^0.7.0",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.14.0",
    "eslint-plugin-oxlint": "^0.11.0",
    "eslint-plugin-vue": "^9.30.0",
    "npm-run-all2": "^7.0.1",
    "oxlint": "^0.11.0",
    "postcss": "^8.4.49",
    "prettier": "^3.3.3",
    "release-it": "^17.10.0",
    "tailwindcss": "^3.4.17",
    "typescript": "~5.6.3",
    "vite": "^6.0.3",
    "vite-plugin-dts": "^4.3.0",
    "vite-plugin-vue-devtools": "^7.6.5",
    "vue-tsc": "^2.1.10"
  }
}
